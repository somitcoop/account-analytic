<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.analytic.plan</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale_project.product_template_form_view_invoice_policy_inherit_sale_project"/>
        <field name="arch" type="xml">
            <field name="service_tracking" position="after">
                <field name="analytic_plan_id"
                       attrs="{'invisible': ['|',
                                          ('type', '!=', 'service'),
                                          ('service_tracking', 'not in', ['task_in_project', 'project_only'])]}"/>
            </field>
        </field>
    </record>
</odoo>
